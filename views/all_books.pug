extends header.pug

block content
	body
		h1 Books
		p
			a.button(href="/new_book") Create New Book
		p
			| Filters 
			a(href="/") All
			|  | 
			a(href="/overdue_books") Overdue
			|  | 
			a(href="/checked_books") Checked Out
		table
			thead
				tr
					th Title
					th Author
					th Genre
					th Year Released
			tbody
				each book in books
					tr
						td
							a(href=`/${book.title}`)= book.title
						td= book.author
						td= book.genre
						td= book.first_published
